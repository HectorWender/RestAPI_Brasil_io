@{
    ViewData["Title"] = "Result return API Brasil.io";
}
<h1>@Html.ViewData["Title"]</h1>

<form class="form-inline" asp-action="SearchApi">
    <div class="form-group mx-sm-3 mb-2">
        <input type="text" class="form-control" name="state" placeholder="State">
    </div>
    <div class="form-group mx-sm-3 mb-2">
        <input type="date" class="form-control" name="date" placeholder="Date">
    </div>
    <div class="form-group mx-sm-3 mb-2">
        <input type="text" class="form-control" name="city_ibge_code" placeholder="IBGE Code">
    </div>

    <div class="form-group mx-sm-3 mb-2">
        <select name="place_type" class="form-select">
            <option selected value="state">state</option>
            <option value="city">city</option>
        </select>
    </div>

    <div class="form-group mx-sm-3 mb-2">
        <span>Is Last?</span>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="is_last" value="True" checked>
            <label class="form-check-label" for="is_last">
                Yes
            </label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="is_last" value="False">
            <label class="form-check-label" for="is_last">
                No
            </label>
        </div>
    </div>
    <button type="submit" class="btn btn-primary mb-2">Search</button>
</form>

<br />

<table class="table border">
    <thead>
        <tr>
            <th>City</th>
            <th>IBGE code</th>
            <th>Date</th>
            <th>Deaths</th>
            <th>Estimated population</th>
            <th>State</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.city</td>
                <td>@item.city_ibge_code</td>
                <td>@item.date</td>
                <td>@item.deaths</td>
                <td>@item.estimated_population</td>
                <td>@item.state</td>
            </tr>
        }
    </tbody>
</table>
